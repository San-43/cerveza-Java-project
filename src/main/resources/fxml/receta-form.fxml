<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="16" styleClass="card"
      fx:controller="org.cerveza.cerveza.controller.RecetaFormController">
    <children>
        <Label text="Receta" styleClass="h1"/>
        <GridPane hgap="10" vgap="12">
            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>

            <Label text="Cerveza" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cboCerveza" promptText="Selecciona cerveza" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Ingrediente" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cboIngrediente" promptText="Selecciona ingrediente" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Cantidad" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCantidad" promptText="p. ej. 500" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Listar" onAction="#onListar"/>
            <Button text="Nuevo" onAction="#onNuevo" fx:id="btnNuevo"/>
            <Button text="Guardar" onAction="#onGuardar" fx:id="btnGuardar"/>
            <Button text="Eliminar" onAction="#onEliminar" fx:id="btnEliminar"/>
        </HBox>

        <TableView fx:id="tblRecetas" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colCerveza" text="Cerveza (ID)" prefWidth="140"/>
                <TableColumn fx:id="colIngrediente" text="Ingrediente (ID)" prefWidth="160"/>
                <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="120"/>
            </columns>
        </TableView>
    </children>
</VBox>
