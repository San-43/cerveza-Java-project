<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cerveza.cerveza.controller.ProduccionFormController">
    <top>
        <VBox spacing="8" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="ProducciÃ³n" />
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints valignment="CENTER" />
                        <RowConstraints valignment="CENTER" />
                        <RowConstraints valignment="CENTER" />
                        <RowConstraints valignment="CENTER" />
                    </rowConstraints>

                    <padding>
                        <Insets bottom="0" left="10" right="10" top="10" />
                    </padding>

                    <children>
                        <Label text="Cerveza:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ComboBox fx:id="cbCerveza" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Fecha:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <DatePicker fx:id="dpFecha" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Cantidad:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="txtCantidad" promptText="Ej. 1000" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Lote:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="txtLote" promptText="Opcional" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 10 10 10;">
                    <children>
                        <Button fx:id="btnNuevo" onAction="#onNuevo" text="Nuevo" />
                        <Button fx:id="btnGuardar" onAction="#onGuardar" text="Guardar" />
                        <Button fx:id="btnEliminar" onAction="#onEliminar" text="Eliminar" />
                        <Button fx:id="btnRefrescar" onAction="#onRefrescar" text="Refrescar" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tblProduccion" prefHeight="400" prefWidth="700" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" prefWidth="70" text="ID" />
                <TableColumn fx:id="colCerveza" prefWidth="200" text="Cerveza" />
                <TableColumn fx:id="colFecha" prefWidth="120" text="Fecha" />
                <TableColumn fx:id="colCantidad" prefWidth="120" text="Cantidad" />
            </columns>
            <padding>
                <Insets bottom="10" left="10" right="10" top="0" />
            </padding>
        </TableView>
    </center>
</BorderPane>
