<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="16" styleClass="card"
      fx:controller="org.cerveza.cerveza.controller.ProduccionFormController">
    <children>
        <Label text="ProducciÃ³n" styleClass="h1"/>

        <GridPane hgap="10" vgap="12">
            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>

            <Label text="Cerveza" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbCerveza" promptText="Elige la cerveza"
                      GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Fecha" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpFecha" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Cantidad" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCantidad" promptText="Ej. 100"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Nuevo"   fx:id="btnNuevo"   onAction="#onNuevo"/>
            <Button text="Guardar" fx:id="btnGuardar" onAction="#onGuardar"/>
            <Button text="Eliminar" fx:id="btnEliminar" onAction="#onEliminar"/>
        </HBox>

        <TableView fx:id="tblProduccion" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId"        text="ID"        prefWidth="60"/>
                <TableColumn fx:id="colCerveza"   text="Cerveza"   prefWidth="200"/>
                <TableColumn fx:id="colFecha"     text="Fecha"     prefWidth="140"/>
                <TableColumn fx:id="colCantidad"  text="Cantidad"  prefWidth="120"/>
            </columns>
        </TableView>
    </children>
</VBox>
