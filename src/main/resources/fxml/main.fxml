<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.cerveza.cerveza.controller.MainController"
            >

    <top>
        <VBox spacing="8" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="6" right="10" bottom="6" left="10"/>
            </padding>

            <!-- MenuBar -->
            <MenuBar styleClass="app-menubar" useSystemMenuBar="false">
                <menus>
                    <Menu text="_Archivo" mnemonicParsing="true">
                        <items>
                            <MenuItem text="Salir" onAction="#onSalir" accelerator="Ctrl+Q"/>
                        </items>
                    </Menu>

                    <Menu text="_Catálogos" mnemonicParsing="true">
                        <items>
                            <MenuItem text="Cervezas" onAction="#openCervezaForm" accelerator="Ctrl+1"/>
                            <MenuItem text="Marcas"   onAction="#openMarcaForm"   accelerator="Ctrl+2"/>
                            <MenuItem text="Envases"  onAction="#openEnvaseForm"  accelerator="Ctrl+3"/>
                        </items>
                    </Menu>

                    <Menu text="_Consultas" mnemonicParsing="true">
                        <items>
                            <MenuItem text="Buscador" onAction="#openSearchView" accelerator="Ctrl+F"/>
                        </items>
                    </Menu>

                    <Menu text="_Ayuda" mnemonicParsing="true">
                        <items>
                            <MenuItem text="Acerca de" onAction="#onAcercaDe" accelerator="F1"/>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>

            <!-- ToolBar -->
            <ToolBar styleClass="app-toolbar">
                <Button onAction="#openCervezaForm"      text="Cervezas"/>
                <Button onAction="#openMarcaForm"        text="Marcas"/>
                <Button onAction="#openEnvaseForm"       text="Envases"/>
                <Button onAction="#openProduccionForm"   text="Producción"/>
                <Button onAction="#openExpendioForm"     text="Expendio"/>
                <Button onAction="#openExistenciaForm"   text="Existencia"/>
                <Button onAction="#openFabricanteForm"   text="Fabricante"/>
                <Button onAction="#openIngredienteForm"  text="Ingrediente"/>
                <Button onAction="#openOrdenForm"        text="Orden"/>
                <Button onAction="#openPedidoForm"       text="Pedido"/>
                <Button onAction="#openPresentacionForm" text="Presentación"/>
                <Button onAction="#openRecetaForm"       text="Receta"/>
                <Button onAction="#openVentaForm"        text="Venta"/>
                <Button onAction="#openSearchView"      text="Buscador"/>

                <Separator/>

                <!-- Empuja la marca a la derecha -->
                <Region prefWidth="20" VBox.vgrow="NEVER"/>
                <Pane styleClass="spacer" HBox.hgrow="ALWAYS"/>

                <Label styleClass="brand" text="MyDB"/>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <StackPane fx:id="contentPane">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <Label styleClass="muted" text="Selecciona un módulo del menú superior" />
            </children>
        </StackPane>
    </center>

</BorderPane>
