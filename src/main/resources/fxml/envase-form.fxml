<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="16" styleClass="card"
      fx:controller="org.cerveza.cerveza.controller.EnvaseFormController">
    <children>
        <Label text="Envases" styleClass="h1"/>
        <GridPane hgap="10" vgap="12">
            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>

            <Label text="Nombre" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNombre" promptText="Botella 355ml" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Material" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtMaterial" promptText="Vidrio / Aluminio" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Capacidad" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCapacidad" promptText="355ml / 6x355ml / 1L" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Descripción" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextArea fx:id="txtDescripcion" prefRowCount="3" promptText="Paquete de 6"
                      GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label text="Buscar por" />
            <ComboBox fx:id="cmbBusqueda" prefWidth="150.0" promptText="Elige un campo..." />
            <TextField fx:id="txtBusqueda" promptText="Buscar..." />
            <Button text="Listar" onAction="#onListar" fx:id="btnListar"/>
            <Button text="Nuevo" onAction="#onNuevo" fx:id="btnNuevo"/>
            <Button text="Guardar" onAction="#onGuardar" fx:id="btnGuardar"/>
            <Button text="Actualizar Registro" onAction="#onActualizar" fx:id="btnActualizar" disable="true"/>
            <Button text="Eliminar" onAction="#onEliminar" fx:id="btnEliminar"/>
        </HBox>

        <TableView fx:id="tblEnvases" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                <TableColumn fx:id="colMaterial" text="Material" prefWidth="160"/>
                <TableColumn fx:id="colCapacidad" text="Capacidad" prefWidth="160"/>
                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="240"/>
            </columns>
        </TableView>
    </children>
</VBox>
